<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_palmera"
    tools:context=".NuevoReclamo">

    <ImageView
        android:id="@+id/bannerArriba"
        android:layout_width="0dp"
        android:layout_height="105dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/banner_arriba" />

    <TextView
        android:id="@+id/textNombreAplicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Palmas de Mallorca"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bannerArriba" />

    <TextView
        android:id="@+id/textGenerarReclamo"
        android:layout_width="395dp"
        android:layout_height="89dp"
        android:layout_gravity="center_vertical"
        android:baselineAligned="false"
        android:text="Generar Reclamo"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="125dp" />

    <Spinner
        android:id="@+id/spinnerSitio"
        android:layout_width="324dp"
        android:layout_height="39dp"
        android:background="@android:drawable/spinner_dropdown_background"
        android:spinnerMode="dropdown"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="288dp" />

    <Spinner
        android:id="@+id/spinnerDesperfecto"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:background="@android:drawable/spinner_dropdown_background"
        android:spinnerMode="dropdown"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="367dp" />

    <EditText
        android:id="@+id/editTextDescripcion"
        android:layout_width="358dp"
        android:layout_height="167dp"
        android:background="@color/white"
        android:hint="DescripciÃ³n"
        android:padding="8dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="473dp" />

    <Button
        android:id="@+id/buttonAdjuntarArchivos"
        android:layout_width="334dp"
        android:layout_height="41dp"
        android:background="?android:attr/galleryItemBackground"
        android:text="Adjuntar archivos"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/ic_attach_file"
        android:padding="8dp"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="656dp" />


    <Button
        android:id="@+id/buttonGenerar"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:backgroundTint="@android:color/system_primary_fixed_dim"
        android:text="Generar"
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="713dp" />

    <ImageView
        android:id="@+id/bannerAbajo"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/banner_abajo" />

    <ImageButton
        android:id="@+id/botonCambiarUsuarioIzquierda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="?attr/selectableItemBackground"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:src="?attr/actionModeCloseDrawable"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/botonCambiarUsuarioDerecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="?attr/selectableItemBackground"
        android:rotationY="180"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:src="?attr/actionModeCloseDrawable"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textTipoUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/botonCambiarUsuarioDerecha"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/botonCambiarUsuarioIzquierda" />
</androidx.constraintlayout.widget.ConstraintLayout>
